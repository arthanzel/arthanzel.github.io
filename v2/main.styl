// Solarized colour palette
base03    = #002b36;
base02    = #073642;
base01    = #586e75;
base00    = #657b83;
base0     = #839496;
base1     = #93a1a1;
base2     = #eee8d5;
base3     = #fdf6e3;
yellow    = #b58900;
orange    = #cb4b16;
red       = #dc322f;
magenta   = #d33682;
violet    = #6c71c4;
blue      = #268bd2;
cyan      = #2aa198;
green     = #859900;

body {
  background: mix(#f3f3f3, base3, 95%);
  color: mix(base01, base02, 50%);
  font: 500 16px 'Open Sans', Arial, sans-serif;

  h1, h2 {
    color: mix(blue, base01, 75%);
  }

  h3 {
    color: mix(violet, base02, 50%);
    color: base02;
    font-family: 'Open Sans', Arial, sans-serif;
    font-size: 24px;
    font-weight: 400;
  }

  &.dark {
    background: base03;
    color: base1;
  }
}

p {
  margin-bottom: 0.5rem;
  &:last-child {
    margin-bottom: 0;
  }
}

h1, h2 {
  font-family: 'Source Code Pro', Consolas, monospace;
  font-weight: 500;
  margin-top: 20px;
  position: relative;
  &::before { position: absolute; }
}

h1::before {
  content: "# ";
  left: -30px;
}

h2::before {
  content: "## ";
  left: -50px;
}

.lead {
  font-weight: 400;
}

.star, .half-star, .empty-star {
  background-repeat: no-repeat;
  background-position: left center;
  color: red;
  display: inline-block;
  height: 1em;
  vertical-align: baseline;
  width: 16px;
}

.star {
  background-image: url('data:image/svg+xml;base64,');
}

.half-star {
  background-image: url('data:image/svg+xml;base64,');
}

.empty-star {
  background-image: url('data:image/svg+xml;base64,');
}

.job {
  margin-top: 0;
  padding: 7px 0;

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    li { margin: 7px 0px; }
  }
}

.x-sep + .x-sep {
  border-left: 1px dashed mix(base1, base2, 30%);
}

.y-sep + .y-sep {
  border-top: 1px dashed mix(base1, base2, 30%);
}

